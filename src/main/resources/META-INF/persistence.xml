<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="sbb-pu">
<!--        <jta-data-source>java:/</jta-data-source>-->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
<!--        <jta-data-source>java:/SbbTest</jta-data-source>-->
        <class>com.turchinsky.entities.TrainEntity</class>
        <class>com.turchinsky.entities.StationEntity</class>
        <class>com.turchinsky.entities.RouteEntity</class>
        <class>com.turchinsky.entities.PassengerEntity</class>
        <class>com.turchinsky.entities.RouteDetailsEntity</class>
        <class>com.turchinsky.entities.RouteDetailsEntityPK</class>
        <class>com.turchinsky.entities.TrainHasScheduleAndRouteEntity</class>
        <class>com.turchinsky.entities.ScheduleDetailsEntity</class>
        <class>com.turchinsky.entities.TicketEntity</class>
        <class>com.turchinsky.entities.TicketHolderEntity</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://sbbserverdb.postgres.database.azure.com:5432/sbb?gssEncMode=disable"/>
            <property name="javax.persistence.jdbc.user" value="postgres@sbbserverdb"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>